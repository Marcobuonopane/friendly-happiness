  },
  "bugs": {
    "url": "https://github.com/Marcobuonopane/friendly-happiness/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "pwa": {
    "name": "AUTENTICO v2.2",
    "short_name": "AUTENTICO",
    "theme_color": "#8b4513",
    "background_color": "#f5f1e8",
