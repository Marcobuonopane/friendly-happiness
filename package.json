{
  "name": "autentico",
  "version": "2.2.0",
  "description": "Sistema di Certificazione Digitale con crittografia AES-256 e autenticazione biometrica",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "dev": "python3 -m http.server 8080",
    "build": "node build/build.js",
    "build:android": "node scripts/auto-build-playstore.js",
    "deploy:internal": "./scripts/deploy-playstore.sh internal",
    "deploy:beta": "./scripts/deploy-playstore.sh beta", 
    "deploy:production": "./scripts/deploy-playstore.sh production",
    "deploy:quick": "./scripts/deploy-playstore.sh internal true",
    "setup:playstore": "./scripts/setup-playstore-api.sh",
    "setup:secrets": "./scripts/setup-playstore-api.sh secrets",
    "validate:aab": "fastlane android build_and_validate",
    "update:metadata": "fastlane android update_metadata",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "digital-certification",
    "biometric-authentication", 
    "aes-256-encryption",
    "pwa",
    "security",
    "document-protection",
    "blockchain"
  ],
